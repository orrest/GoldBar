<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="GoldBar.App"
             xmlns:lcoal="clr-namespace:GoldBar"
             x:DataType="lcoal:App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

                 <Application.Styles>
        <FluentTheme />
    </Application.Styles>


             <TrayIcon.Icons>
    <TrayIcons>
      <TrayIcon Icon="/Assets/goldbar.ico" 
                ToolTipText="GoldBar">
        <TrayIcon.Menu>
          <NativeMenu>
            <NativeMenuItem Header="Exit" Command="{Binding ExitCommand}">
            </NativeMenuItem>
          </NativeMenu>
        </TrayIcon.Menu>
      </TrayIcon>
    </TrayIcons>
  </TrayIcon.Icons>


</Application>